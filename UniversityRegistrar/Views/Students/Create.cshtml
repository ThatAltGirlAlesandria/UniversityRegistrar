@{
    Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<p>Enter a new student</p>

@using (Html.BeginForm())
{
    @Html.LabelFor(model => model.StudentName)
    @Html.TextBoxFor(model => model.StudentName)

    @Html.LabelFor(model => model.EnrollmentDate)
    @Html.TextBoxFor(model => model.EnrollmentDate)
    <input type="submit" value="Add new student" />
}

<p>@Html.ActionLink("Show students", "Index")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>