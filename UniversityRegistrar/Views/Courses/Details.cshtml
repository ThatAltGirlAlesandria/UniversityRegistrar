@{
    Layout = "_Layout";
}

@model UniversityRegistrar.Models.Course
@using UniversityRegistrar.Models
@using System.Collections.Generic

<p>Course Details</p>
<p>@Html.DisplayNameFor(model => model.CourseName) @Html.DisplayFor(model => model.CourseName)</p>

@if (Model.JoinEntities.Count == 0)
{
    <p>There are no Students added to this course</p>
}
else
{
    <h4>Students registered to this course:</h4>
    <ul>
        @foreach (StudentCourse join in Model.JoinEntities)
        {
            <li>@join.Student.StudentName</li>
        }
    </ul>
}


<p>@Html.ActionLink("Delete Course", "Delete", "Courses", new {id = @Model.CourseId})</p>